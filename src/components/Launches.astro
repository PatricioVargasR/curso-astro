---
import {type APISpaceXResponse} from '../types/api'

    // Se puede ejecutar el JavaScript o TypeScript que se quiera
    const res = await fetch('https://api.spacexdata.com/v5/launches/query', {
        method: "POST",
        headers: {
            "Content-Type": "application/json",
        },
        body: JSON.stringify({
            query: {},
            options: {
                sort: {
                    date_unix: "asc",
                },
                limit: 12,
            },
        }),
    })

    const { docs: launches } = (await res.json()) as APISpaceXResponse

    // Principalmente los resultados JS no se verán reflejados del lado del cliente, si no del servidor o compilación
    //console.log(docs)
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    {
        launches.map(
            (launch) => <article>
                <img src={launch.links.patch.small} alt="">
                <h2>Launch #{launch.id}</h2>
            </article>
        )
    }
</div>